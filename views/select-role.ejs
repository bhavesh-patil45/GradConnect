<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Role - GradConnect</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.4/dist/tailwind.min.css" rel="stylesheet">
  <style>
    /* Background Image */
    body {
      background-image: url('/images/bg.jpg'); /* Update this path */
      background-size: cover;
      background-position: center;
    }
  </style>
</head>
<body class="bg-gray-100">

  <header class="bg-blue-600 p-4 text-white text-center">
    <h1 class="text-4xl font-semibold">Welcome to GradConnect</h1>
    <p class="mt-2 text-lg">Select your role to Register or Login</p>
  </header>

  <div class="flex justify-center items-center min-h-screen">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <!-- Admin Role -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <h3 class="text-xl font-semibold text-blue-600">Admin</h3>
        <div class="mt-4">
          <a href="/admin/register">
            <button class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 w-full mb-3">Register as Admin</button>
          </a>
          <a href="/login?role=admin">
            <button class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 w-full">Login as Admin</button>
          </a>
        </div>
      </div>

      <!-- Student Role -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <h3 class="text-xl font-semibold text-blue-600">Student</h3>
        <div class="mt-4">
          <a href="/student/register">
            <button class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 w-full mb-3">Register as Student</button>
          </a>
          <a href="/login?role=student">
            <button class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 w-full">Login as Student</button>
          </a>
        </div>
      </div>

      <!-- Alumni Role -->
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <h3 class="text-xl font-semibold text-blue-600">Alumni</h3>
        <div class="mt-4">
          <a href="/alumni/register">
            <button class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 w-full mb-3">Register as Alumni</button>
          </a>
          <a href="/login?role=alumni">
            <button class="bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-700 w-full">Login as Alumni</button>
          </a>
        </div>
      </div>
      
    </div>
  </div>

</body>
</html>
